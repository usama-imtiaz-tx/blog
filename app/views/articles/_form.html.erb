<%= simple_form_for @article, html: {class: 'form-horizontal'}, local: true do |form| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> 
        prohibited this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <%= form.input :title %>
  <%= form.input :text, input_html: { row: 12 } %>
  <%= form.input :all_tags, placeholder: "Tags separated with comma" %>

  <%= form.button :submit, class: "btn-primary" %>
 
<% end %>